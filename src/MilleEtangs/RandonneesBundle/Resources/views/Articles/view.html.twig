<div class="article">
    <small>{{ article.getPublication() | format_date() }}</small>
	<h3 class="text-left">
        <a href="{{ path('article', {'slug':article.getSlug()}) }}">{{ article.getName() }}</a>
    </h3>
	<div class="text">{{ article.getContent()|striptags|truncate(250)|html }}</div>
</div>
