{% extends 'MilleEtangsRandonneesBundle::layout.html.twig' %}

{% block title %}{{ article.getName() }} | {{ parent()}}{% endblock %}

{% block body %}
<div class="article">
    <small>{{ article.getPublication() | format_date }}</small>
	<h3>{{ article.getName() }}</h3>
	<div class="text">{% autoescape 'html' %}{{ article.getContent()|raw }}{% endautoescape %}</div>
	<div class="comments">
		{{ knp_disqus_render('articles',{'identifier': path('article', {'slug': article.getSlug()})}) }}
    </div>
</div>
{% endblock %}
