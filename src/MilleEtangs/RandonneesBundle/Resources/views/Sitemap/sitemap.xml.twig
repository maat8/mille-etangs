{% set url = "http://www.randos1000etangs.fr" %}
<?xml version="1.0" encoding="UTF-8"?>
<urlset
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd"
    xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
	<url>
        <loc>{{ url }}</loc>
        {% if article is not null %}
            <lastmod>{{ article.getPublication() | date('c') }}</lastmod>
        {% endif %}
        <changefreq>daily</changefreq>
    </url>
    <url>
        <loc>{{ url }}{{ path('mille_etangs') }}</loc>
        <changefreq>monthly</changefreq>
    </url>
	<url>
        <loc>{{ url }}{{ path('itinearies_type', {'type':'bike'}) }}</loc>
        <changefreq>weekly</changefreq>
    </url>
    <url>
        <loc>{{ url }}{{ path('itinearies_type', {'type':'hike'}) }}</loc>
        <changefreq>weekly</changefreq>
    </url>
    <url>
        <loc>{{ url }}{{ path('accomodations') }}</loc>
        <changefreq>monthly</changefreq>
    </url>
    <url>
        <loc>{{ url }}{{ path('restaurants') }}</loc>
        <changefreq>monthly</changefreq>
    </url>
    {% for itineary in itinearies %}
	    <url>
	        <loc>{{ url }}{{ path('itineary', {'slug':itineary.getSlug()}) }}</loc>
	        <changefreq>monthly</changefreq>
            <lastmod>{{ itineary.getUpdated() | date('c') }}</lastmod>
	    </url>
    {% endfor %}
</urlset>
