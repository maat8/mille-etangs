<script type="text/javascript" src="{{ asset('js/tiny_mce/tiny_mce.js') }}"></script>

{% block body %}
<script type="text/javascript">
tinyMCE.init({
        mode : "textareas",
        theme : "advanced"
});
</script>

<form action="" method="POST">
	{{ form_errors(form) }}
	{{ form_widget(form) }}

	{{ form_rest(form) }}
	<input type="submit" value="enregistrer" class="btn btn-large btn-primary" />
</form>
{% endblock %}