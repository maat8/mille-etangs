{% extends "MilleEtangsRandonneesBundle:Security:layout.html.twig" %}

{% block javascripts %}
	{% javascripts "@MilleEtangsRandonneesBundle/Resources/assets/js/jquery-1.8.0.min.js" %}
        <script type="text/javascript" src="{{ asset(asset_url) }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
<script type="text/javascript">
tinyMCE.init({
        mode : "textareas",
        theme : "advanced"
});
</script>

<form action="" method="POST" class="form-horizontal">
    <div class="form-group">
    	{{ form_errors(form.categorie) }}
        {{ form_label(form.categorie) }}
        {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.nom) }}
        {{ form_label(form.nom) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.message) }}
        {{ form_label(form.message) }}
        {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.publication) }}
        {{ form_label(form.publication) }}
        {{ form_widget(form.publication, {'attr': {'class': 'form-control'}}) }}
    </div>

	{{ form_rest(form) }}

    <div class="form-group">
	   <input type="submit" value="Enregistrer" class="btn btn-primary btn-lg" />
    </div>
</form>
{% endblock %}