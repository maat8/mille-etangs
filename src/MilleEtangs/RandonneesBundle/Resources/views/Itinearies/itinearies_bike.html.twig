{% extends 'MilleEtangsRandonneesBundle::layout.html.twig' %}

{% block title %}Randonnées VTT | {{ parent()}}{% endblock %}

{% block body %}
	<h2>Randonnées VTT</h2>

	<table>
        <thead>
            <tr></tr>
        </thead>
        <tbody>
	{% for itineary in itinearies %}
		<tr>
            <td><a href="{{ path('itineary', {'slug': itineary.getSlug()}) }}">{{ itineary.getName() }}</a></td>
            <td>{{ itineary.getIncline() }}</td>
        </tr>
	{% else %}
		Il n'y a pas de randonnées actuellement !
	{% endfor %}
        <tbody>
	</table>
{% endblock %}
